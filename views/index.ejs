<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <div class="container">
      <header class="d-flex justify-content-center py-3">
        <ul class="nav nav-pills">
          <li class="nav-item">
            <a href="/" class="nav-link active" aria-current="page">Home</a>
          </li>
          <li class="nav-item">
            <a href="/posts" class="nav-link">Create Post</a>
          </li>
        </ul>
      </header>
    </div>
    <% if(locals.postArray.length > 0) { %>
    <div class="container text-center">
      <div class="row g-1">
        <% for (post in postArray) { %>
        <div class="card col-12 col-md-6 my-custom-border">
          <div class="card-body">
            <h5 class="card-title capitalize-style">
              <%= postArray[post].title %>
            </h5>
            <p class="card-text capitalize-style author-style">
              Author: <%= postArray[post].author %>
            </p>
            <p class="my-content-style card-text">
              <%= postArray[post].content %>
            </p>
            <a
              href="/posts/view/<%= postArray[post].id %>"
              class="btn btn-primary"
              >View Post</a
            >
            <a
              href="/posts/edit/<%= postArray[post].id %>"
              class="btn btn-success"
              >Edit Post</a
            >
            <a
              href="/posts/delete/<%= postArray[post].id %>"
              class="btn btn-danger"
              >Delete Post</a
            >
          </div>
        </div>
        <%}%>
      </div>
    </div>
    <%} else {%>
    <div class="container d-flex justify-content-center py-5">
      <a href="/posts" class="nav-link"
        ><button type="button" class="btn btn-secondary">
          <h2>Create New Post</h2>
        </button></a
      >
    </div>
    <%} %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
